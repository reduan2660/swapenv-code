{
  "name": "swapenv-code",
  "displayName": "swapenv",
  "description": "Manage swapenv environments directly from IDE",
  "publisher": "AlveReduan",
  "repository": {
    "type": "git",
    "url": "https://github.com/reduan2660/swapenv-code"
  },
  "homepage": "https://swapenv.sh",
  "version": "0.0.1",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      { "command": "swapenv.showMenu", "title": "swapenv: Show Menu" },
      { "command": "swapenv.switchEnv", "title": "swapenv: Switch Environment" },
      { "command": "swapenv.load", "title": "swapenv: Load" },
      { "command": "swapenv.spit", "title": "swapenv: Spit" },
      { "command": "swapenv.refresh", "title": "swapenv: Refresh" },
      { "command": "swapenv.showVersions", "title": "swapenv: Show Versions" }
    ],
    "keybindings": [
      {
        "command": "swapenv.showMenu",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s"
      }
    ],
    "configuration": {
      "title": "swapenv",
      "properties": {
        "swapenv.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Auto-refresh on file saves"
        },
        "swapenv.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show success/error messages"
        }
      }
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0"
  }
}
